#include <iostream>
using namespace std;
/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int main() {
   float dollars,britishpound,frenchfranc,japaneseyen;
   int currency;
   cout<<"enter 1 to convert pound to dollar,2 to convert french france to dollar,3 to convert japenese yen to dollar";
   cin>>currency;
   if(currency ==1)
   {
   	cout<<"enter your british pound ="<<endl;
   	cin>>britishpound;
   	britishpound *= 1.487;
   	cout<<"in dollars thats"<<"$"<< britishpound<<"U.S"<<endl;
   }else if(currency ==2)
   {
   	cout<<"enter your french france ="<<endl;
   	cin>>frenchfranc;
   	frenchfranc *= 0.172;
   	cout<<"in dollars thats"<<"$"<< frenchfranc<<"U.S"<<endl;
   }else if(currency ==3)
   {
   	cout<<"enter your japanese yen ="<<endl;
   	cin>>japaneseyen;
   	japaneseyen *= 0.00955;
   	cout<<"in dollars thats"<<"$"<< japaneseyen<<"U.S"<<endl;
   }

   
   
   
    return 0;
}
